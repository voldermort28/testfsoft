@model MySony.ViewModels.RegisterVM
@{
	Layout = null;
}
@{
	var listCity = "";
	var listProduct = "";
	foreach (var item in Model.cities)
	{
		listCity += @"<option value=" + item.city_id.ToString() + ">" + item.name + @"</option>";
	}
	foreach (var item in Model.cartelogies)
	{
		listProduct += @"<option value=" + item.category_id.ToString() + ">" + item.name + @"</option>";
	}
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>Đăng ký</title>
	<meta name="description" content="app, web app, responsive, admin dashboard, admin, flat, flat ui, ui kit, off screen nav" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
	<link rel="icon" href="/static/images/favicon.ico">
	<link href="/Content/jquery-ui.css" rel="stylesheet" />
	<link rel="stylesheet" href="/static/css/app.v1.css" type="text/css" />
	<link rel="stylesheet" href="/static/css/sony.style.css" type="text/css" />
	<link rel="stylesheet" href="/static/css/jquery.fancybox.css" type="text/css" />
	<link rel="stylesheet" href="/static/js/chosen/chosen.css" type="text/css" />
</head>
<body>
	<div id="ajax_loader" style="background-color: rgba(0, 0, 0, 0.5); z-index: 9999; position: fixed; left: 0px; top: 0px; width: 100%; height: 100%; display: none;" class="">
		<img src="/static/images/loading.gif" style="position: fixed; left: 50%; top: 50%;" class="">
	</div>
	<section class="vbox site-wrapper page-user register dark-green">
		<section>
			<section class="hbox stretch">
				<section id="content">
					<header class="header header-md navbar bg site-header-top">
						<div class="navbar-header aside-md dk site-logo">
							<a class="btn btn-link visible-xs site-m-menu-toggle" data-parsley-toggle="class:nav-off-screen" data-parsley-target="#nav"> <i class="fa fa-bars"></i> </a>
							<a href="/" class="navbar-brand"> <img src="/static/images/logo.png" class="m-r-sm" alt="scale" height="17" width="100" /> </a>
						</div>
						<div class="page-header-logo">
							<div class="customer-logo">
								<img src="/static/images/figures/cus-logo.png" alt="...">
							</div>
							<div class="navbar-header site-logan">
								Chúng tôi trồng cây Dịch vụ
								<span>bạn hái quả Chăm sóc</span>
							</div>
						</div>
					</header>
					<section class="vbox page-user-content-box">
						<div class="page-header padder page-contrains">
							<ul>
								<li>
									<span class="thumb-u-avatar pull-left">
										<img src="/static/images/figures/avatar_profile.png" alt="...">
									</span>
									<a href="#" class="active">Đăng ký <i class="fa fa-caret-up"></i></a>
								</li>
								@*<li>
										<i class="fa fa-angle-right"></i>
										<a href="#">Xác nhận thông tin <i class="fa fa-caret-up"></i></a>
									</li>*@
							</ul>
						</div>
						<section class="scrollable">
							<div class="page page-main-content">
								<div class="page-content padder page-contrains">
									<div class="page-form-wrapper">
										<form id="frmReg" role="form" class="form form-persional-infos" data-parsley-validate onsubmit="return false;" autocomplete="off">
											@Html.AntiForgeryToken()
											<div class="form-markup form-title">
												Đăng ký thông tin cá nhân
											</div>
											<section class="row border-top">
												<div class="col-xs-12 col-sm-6 col-md-6 r-l">
													<div class="form-group form-group-email">
														<label>Email đăng nhập <span class="form-require">*</span></label>
														<input id="txtEmailRegister" type="email" class="form-control" data-parsley-type="email" placeholder="Email đăng nhập" data-parsley-required="true" required />
													</div>
												</div>
												<div class="col-xs-12 col-sm-6 col-md-6 r-r">
													<div class="form-group form-group-phone">
														<label>Điện thoại di động <span class="form-require">*</span></label>
														<input id="txtTelRegister" placeholder="Điện thoại di động" data-parsley-data-parsley-type="integer" data-parsley-data-parsley-length="[10, 11]" data-parsley-pattern="(01\d{9})|(09\d{8})$" type="text" class="form-control" data-parsley-required="true" required data-parsley-trigger="change" />
													</div>
												</div>
											</section>
											<section class="row">
												<div class="col-xs-12 col-sm-6 col-md-6 r-l">
													<div class="form-group form-group-email form-group-pass">
														<label>Mật khẩu <span class="form-require">*</span></label>
														<input id="password" type="password" class="form-control" data-parsley-trigger="change" data-parsley-minlength="6" data-parsley-notblank="true" data-parsley-required="true" data-parsley-pattern="^(?=.*[a-z])(?=.*\d)" placeholder="VD: abc123" required />
													</div>
												</div>
												<div class="col-xs-12 col-sm-6 col-md-6 r-r">
													<div class="form-group form-group-phone form-group-pass">
														<label>Xác nhận mật khẩu <span class="form-require">*</span></label>
														<input id="re-password" type="password" class="form-control" data-parsley-trigger="change" data-parsley-equalto="#password" data-parsley-minlength="6" data-parsley-notblank="true" data-parsley-required="true" data-parsley-pattern="^(?=.*[a-z])(?=.*\d)" placeholder="VD: abc123" required />
													</div>
												</div>
											</section>
											<section class="row">
												<div class="col-xs-12 col-sm-6 col-md-6 r-l">
													<div class="form-group form-group-last-name">
														<label>Họ <span class="form-require">*</span></label>
														<input id="txtLastNameRegister" type="text" class="form-control" data-parsley-required="true" required data-parsley-pattern="\w+" data-parsley-trigger="change">
													</div>
												</div>
												<div class="col-xs-12 col-sm-6 col-md-6 r-r">
													<div class="form-group form-group-first-name">
														<label>Tên <span class="form-require">*</span></label>
														<input id="txtFirstNameRegister" type="text" class="form-control" data-parsley-required="true" required data-parsley-pattern="\w+" data-parsley-trigger="change">
													</div>
												</div>
											</section>

											<section class="row">
												<div class="col-xs-12 col-sm-6 col-md-6 r-l">
													<div class="form-group form-group-gender">
														<label>Giới tính <span class="form-require">*</span></label>
														<select id="slSex" data-parsley-required="true" class="form-control">
															<option value="">Chọn giới tính</option>
															<option value="1">Nam</option>
															<option value="0">Nữ</option>
														</select>
													</div>
												</div>
												<div class="col-xs-12 col-sm-6 col-md-6 r-r">
													<div class="form-group form-group-birthday">
														<label>Ngày sinh <span class="form-require">*</span></label>
														<input class="form-control" placeholder="dd/MM/yyyy" size="16" type="text" id="slDOB" required readonly="readonly" style="background:white;">
													</div>
												</div>
											</section>
											<section class="row">
												<div class="col-xs-12 col-sm-6 col-md-6 r-l">
													<div class="form-group form-group-address">
														<label>Địa chỉ liên lạc <span class="form-require">*</span></label>
														<input id="txtAddressRegister" type="text" class="form-control" data-parsley-required="true" required data-parsley-pattern="\w+" data-parsley-trigger="change">
													</div>
												</div>
												<div class="col-xs-12 col-sm-3 col-md-3 r-r">
													<div class="form-group form-group-city">
														<label>Thành phố <span class="form-require">*</span></label>
														<select id="slCity" data-parsley-required="true" class="form-control chosen-select">
															<option value="">Chọn Thành Phố</option>
															@foreach (var item in Model.cities)
															{
																<option value="@item.city_id">@item.name</option>
															}
														</select>
													</div>
												</div>
												<div class="col-xs-12 col-sm-3 col-md-3">
													<div class="form-group form-group-ward">
														<label>Quận/Huyện <span class="form-require">*</span></label>
														<select id="slDistrict" data-parsley-required="true" class="form-control chosen-select">
															<option value=""> Chọn Quận/Huyện</option>
														</select>
													</div>
												</div>
											</section>

											<div class="form-markup form-title add-product-link">
												Đăng ký sản phẩm mới<a id="addSP" href="#form-add-product">+ Thêm sản phẩm</a>
											</div>

											<div id="panelRegistProduct">
												<!------- Add product form ---------->
												<div id="form-add-product" class="form-add-product">
													<section class="row border-top">
														<div class="col-xs-12 col-sm-6 col-md-6 r-l">
															<div class="form-group form-group-product-type">
																<label>Chủng loại sản phẩm <span class="form-require">*</span></label>
																<select class="form-control category chosen-select">
																	<option value="">Chủng loại sản phẩm</option>
																	@foreach (var item in Model.cartelogies)
																	{
																		<option value="@item.category_id">@item.name</option>
																	}
																</select>
															</div>
														</div>
														<div class="col-xs-12 col-sm-3 col-md-3">
															<div class="form-group form-group-product-name">
																<div class="user-guide">
																	<label>Tên sản phẩm <span class="form-require">*</span></label>
																	<a href="#user-guide-product-name">Xem ở đâu?</a>
																</div>
																<select class="slProductID form-control chosen-select">
																	<option value="">Tên sản phẩm</option>
																</select>
															</div>
														</div>
														<div class="col-xs-12 col-sm-3 col-md-3 r-r">
															<div class="form-group form-group-product-serial">
																<div class="user-guide">
																	<label>Số serial <span class="form-require">*</span></label>
																	<a href="#user-guide-product-serial">Xem ở đâu?</a>
																</div>
																<input type="text" class="form-control txtProductSerial" data-parsley-pattern="\w+" data-parsley-trigger="change">
															</div>
														</div>
													</section>

													<section class="row">
														<div class="col-xs-12 col-sm-6 col-md-6 r-l">
															<div class="form-group form-group-product-place">
																<label>Nơi mua hàng <span class="form-require">*</span></label>
																<select class="form-control slCity chosen-select">
																	<option value="">Chọn nơi mua</option>
																	@foreach (var item in Model.cities)
																	{
																		<option value="@item.city_id">@item.name</option>
																	}
																</select>


															</div>
														</div>
														<div class="col-xs-12 col-sm-6 col-md-6 r-l">
															<div class="form-group form-group-product-store">
																<label>Tên cửa hàng <span class="form-require">*</span></label>
																<select class="form-control slShop chosen-select">
																	<option value="">Chọn cửa hàng</option>
																</select>
															</div>
														</div>
													</section>
													<section class="row">
														<div class="col-xs-12 col-sm-6 col-md-6 r-l">
															<div class="form-group form-group-product-date">
																<label>Ngày mua hàng <span class="form-require">*</span></label>
																<input class="form-control timePurchase" placeholder="dd/MM/yyyy" size="16" type="text" readonly="readonly" style="background:white;">
															</div>
														</div>
													</section>
												</div>
												<!------- End Add product form ---------->


												<div class="RegisProduct">
													<section class="row border-top">
														<div class="col-xs-12 col-sm-6 col-md-6 r-l">
															<div class="form-group form-group-product-type">
																<label>Chủng loại sản phẩm <span class="form-require">*</span></label>
																<select data-parsley-required="true" class="form-control category chosen-select" id="cmb_category">
																	<option value="">Chủng loại sản phẩm</option>
																	@foreach (var item in Model.cartelogies)
																	{
																		<option value="@item.category_id">@item.name</option>
																	}
																</select>

																<select id="modelImage" hidden="none">
																	@foreach (var item in Model.cartelogies)
																	{
																		<option value="@item.category_id">@item.viewModelImage</option>
																	}
																</select>

																<select id="modelSerialImage" hidden="none">
																	@foreach (var item in Model.cartelogies)
																	{
																		<option value="@item.category_id">@item.viewSerialImage</option>
																	}
																</select>

															</div>
														</div>
														<div class="col-xs-12 col-sm-3 col-md-3">
															<div class="form-group form-group-product-name">
																<div class="user-guide">
																	<label>Tên sản phẩm <span class="form-require">*</span></label>
																	<a href="#user-guide-product-name" onclick="changeImgHref()">Xem ở đâu?</a>
																</div>
																<select data-parsley-required="true" class="slProductID form-control chosen-select" required>
																	<option value="">Tên sản phẩm</option>
																</select>
															</div>
														</div>
														<div class="col-xs-12 col-sm-3 col-md-3 r-r">
															<div class="form-group form-group-product-serial">
																<div class="user-guide">
																	<label>Số serial <span class="form-require">*</span></label>
																	<a href="#user-guide-product-serial" onclick="changeImgHref()">Xem ở đâu?</a>
																</div>
																<input type="text" class="form-control txtProductSerial" data-parsley-required="true" required data-parsley-pattern="\w+" data-parsley-trigger="change">
															</div>
														</div>
													</section>

													<section class="row">
														<div class="col-xs-12 col-sm-6 col-md-6 r-l">
															<div class="form-group form-group-product-place">
																<label>Nơi mua hàng <span class="form-require">*</span></label>
																<select data-parsley-required="true" class="form-control slCity chosen-select">
																	<option value="">Nơi mua</option>
																	@foreach (var item in Model.cities)
																	{
																		<option value="@item.city_id">@item.name</option>
																	}
																</select>
															</div>
														</div>
														<div class="col-xs-12 col-sm-6 col-md-6 r-l">
															<div class="form-group form-group-product-store">
																<label>Tên cửa hàng <span class="form-require">*</span></label>
																<select data-parsley-required="true" class="form-control slShop chosen-select" required>
																	<option value="">Cửa hàng</option>
																</select>
															</div>
														</div>
													</section>
													<section class="row">
														<div class="col-xs-12 col-sm-6 col-md-6 r-l">
															<div class="form-group form-group-product-date">
																<label>Ngày mua hàng <span class="form-require">*</span></label>
																<input data-parsley-required="true" class="form-control timePurchase" placeholder="dd/MM/yyyy" size="16" type="text" readonly="readonly" style="background:white;">
															</div>
														</div>
													</section>
												</div>
											</div>
											<div class="form-markup policy">
												<label>
													<span>Tôi đã đọc và chấp nhận điều khoản chính sách bảo mật thông tin cá nhân</span>
													<input id="chkPolicy1" class="chkPolicy1" type="checkbox" name="check" checked data-parsley-required="true">
												</label>
											</div>
											<div class="g-recaptcha" style="margin: 20px -15px 0; float: right;" data-sitekey='@System.Configuration.ConfigurationManager.AppSettings["recaptcha_sitekey"]'></div>
											<div class="form-actions text-right" style="margin: 0 -15px;clear: both;">
												<button id="btnSubmit" type="submit" class="btn btn-s-md btn-dark">
													Hoàn tất
												</button>
											</div>
										</form>
										<div class="register-finish sony-hidden">
											<div class="register-finish-message">
												Bạn đã đăng ký thông tin thành công
											</div>
										</div>
										<div id="user-guide-product-name" class="user-guide-box">
											<h3>Hướng dẫn xem tên sản phẩm</h3>
											<p><img alt="product guide" id="productImage" /></p>

											<p>Hướng dẫn sao chép tên sản phẩm</p>
										</div>
										<div id="user-guide-product-serial" class="user-guide-box">
											<h3>Hướng dẫn xem số serial sản phẩm</h3>
											<p><img alt="product guide" id="serialImage" /></p>

											<p>Hướng dẫn sao chép số serial sản phẩm</p>
										</div>
									</div>
								</div>
								<div class="page-footer padder">
									<div class="row m-t">
										<div class="col-md-6">
											<div class="block block-landing-footer-menu">
												<div class="block-content">
													<ul class="menu">
														<li>
															<a href="/Clause/">Điều khoản sử dụng</a>
														</li>
														<li>
															<a href="/Privacy/">Quyền riêng tư</a>
														</li>
														<li>
															<a href="https://www.sony.com.vn/section/contactus">Liên hệ</a>
														</li>
                                                        <li class="global clearfix" style="padding-left:20px">
                                                            <a target="_blank"  href="http://sony.net" target="_blank">Global home</a>
                                                        </li>
													</ul>
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="block block-landing-footer-copyright">
												<div class="block-content">
													@DateTime.Now.Year © Bản quyền thuộc sở hữu Công ty Sony Electronics Vietnam
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<!--End content-->
						</section>
					</section>
					<a href="#" class="hide nav-off-screen-block" data-parsley-toggle="class:nav-off-screen" data-parsley-target="#nav"></a>
				</section>
			</section>
		</section>
	</section>

	<!-- my modal -->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog login">
			<div class="modal-content clearfix">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true" class="font-thin h1">&times;</span><span class="sr-only font-thin">Close</span></button>
					<h4 class="modal-title" id="myModalLabel">Thông báo</h4>
				</div>
				<div class="modal-body">
					<div style="line-height:20px" id="msg">msg</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Bootstrap -->
	<!-- App -->
	<script>window.jQuery || document.write('<script src="/static/js/vendor/jquery-1.10.2.min.js"><\/script>')</script>
	<script src="/Scripts/jquery-ui-1.10.4.min.js"></script>
	<script src="/Scripts/bootstrap.min.js"></script>
