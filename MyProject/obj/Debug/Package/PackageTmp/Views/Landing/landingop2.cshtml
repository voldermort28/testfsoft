                    </section>
                </section>
            </aside>
            <!-- /.aside -->
            <section id="content">
                <header class="header header-md navbar site-header-top">
                    <div class="navbar-header aside-md dk site-logo">
                        <a class="btn btn-link visible-xs site-m-menu-toggle" data-toggle="class:nav-off-screen" data-target="#nav"> <i class="fa fa-bars"></i> </a>
                        <a href="#" class="navbar-brand"> <img src="/static/images/logo.png" class="m-r-sm" alt="scale" height="17" width="100" /> </a>
                        <a id="search-form-button" class="btn btn-link visible-xs mobile-search-form" href="#mobile-search-form"> <i class="fa fa-search"></i> </a>
                    </div>
					 
                </header>

                <section class="vbox bg-white">
                    <section class="scrollable">
                        <div class="page page-landing-page login">
                            <div class="page-content padder page-contrains">
                                <div class="row m-t">
                                    <div class="col-md-6 page-landing-left only-desktop">
                                        <div class="reg-tree">
                                            <img src="/static/images/figures/landing-opt2.png" alt="..." height="630" width="590" />
                                        </div>
                                    </div>
                                    <div class="col-md-6 page-landing-right">
                                        <div class="page-header padder page-contrains">
                                            <div class="block block-landing-header-logo">
                                                <div class="block-content">
                                                    <div class="customer-logo">
                                                        <img src="/static/images/figures/cus-logo.png" alt="..." height="100" width="100" />
                                                    </div>
                                                    <div class="site-logan">
                                                        Chúng tôi trồng cây Dịch vụ
                                                        <span>bạn hái quả <b>Chăm sóc</b></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <form id="frmLogin" role="form" class="form form-landing-infos" onsubmit="return false;" autocomplete="off">
                                            <div class="form-markup benefits">
                                                Hãy đăng ký thành viên <b>MySony</b> và tận hưởng nhiều <b>ưu đãi hấp dẫn</b>
                                            </div>
                                            <div class="form-markup links">
                                                <section class="row text-center">
                                                    <div class="col-xs-4 r-l" id="benefit" style="cursor:pointer">
                                                        <img src="/static/images/figures/landing-benefit-member.png" height="18" width="25" alt="">
                                                        <p class="font-bold">
                                                            Quyền lợi  <br /> My Sony
                                                        </p>
                                                    </div>
                                                    <div class="col-xs-4" id="news" style="cursor:pointer">
                                                        <img src="/static/images/figures/landing-benefit-promotion.png" height="18" width="25" alt="">
                                                        <p class="font-bold">
                                                            Tin tức và <br /> khuyến mãi
                                                        </p>
                                                    </div>
                                                    <div class="col-xs-4 r-r" id="check" style="cursor:pointer">
                                                        <img src="/static/images/figures/landing-benefit-qa.png" height="18" width="25" alt="">
                                                        <p class="font-bold">
                                                            Kiểm tra hàng <br /> chính hãng
                                                        </p>
                                                    </div>
                                                </section>
                                            </div>
                                            <h2>Đăng nhập</h2>
                                            <div class="form-group form-email">
                                                <input id="txtEmail" type="email" class="form-control input-md no-border" placeholder="Email đăng nhập" required>
                                            </div>
                                            <div class="form-group form-password">
                                                <input id="txtPass" type="password" class="form-control input-md no-border" placeholder="Mật khẩu" required>
                                            </div>
                                            @if (Common.NeedVerifyHuman())
                                            {
                                                <div class="g-recaptcha form-group" data-sitekey='@System.Configuration.ConfigurationManager.AppSettings["recaptcha_sitekey"]'></div>
                                            }
                                            <div class="form-markup forgot-pass text-right">
                                                <a href="/Register/ForgetPass/">Quên mật khẩu?</a>
                                            </div>
                                            <div class="form-actions row">
                                                <div class="col-xs-4">
                                                    <button id="btnRegister" type="button" class="btn btn-s-md btn-danger">
                                                        Đăng ký
                                                    </button>
                                                </div>
                                                <div class="col-xs-8">
                                                    <button type="submit" id="btnLogin" class="btn btn-s-md btn-dark">
                                                        Đăng nhập
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="page-footer padder">
                                <div class="row m-t">
                                    <div class="col-md-6">
                                        <div class="block block-landing-footer-menu">
                                            <div class="block-content">
                                                <ul class="menu">
                                                    <li class ="clearfix">
                                                        <a href="/Clause/">Điều khoản sử dụng</a>
                                                    </li>
