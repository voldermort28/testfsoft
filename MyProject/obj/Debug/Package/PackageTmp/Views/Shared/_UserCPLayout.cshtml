                                    <!-- nav -->
                                    <nav class="nav-primary hidden-xs site-system-menu">
                                        <ul class="nav nav-main" data-ride="collapse">
                                            <li>
                                                <a href="/" class="bg-green"> <i class="icon  home"> </i> <span>Trang chủ</span> </a>
