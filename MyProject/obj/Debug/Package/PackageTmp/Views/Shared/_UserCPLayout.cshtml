                                                            <span class="thumb-u-avatar pull-left">
                                                                <img src="/static/images/figures/avatar.png" alt="...">
                                                            </span>
                                                            @Common.GetCurrentUserName()
                                                            <b class="caret"></b>
                                                        </a>
                                                        <ul class="dropdown-menu animated fadeInRight">
                                                            <li>
                                                                <span class="arrow top hidden-nav-xs"></span><a href="#">Settings</a>
                                                            </li>
                                                            <li>
