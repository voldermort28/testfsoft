        <!-- Bootstrap -->
        <!-- App -->
        <script>
            function ShowPopup(a, callback) {

                callback = callback || function () { };
                $('#ajax_loader').hide();
                $('.modal').modal('hide');
                $('#myModal').find('#msg').html(a);
                $('#myModal').modal('show');
                $('#myModal').on('hide.bs.modal', function (e) {
                    callback();
                });
            }

            function ShowPopup123() {             
                parent.$.fancybox.close();
            }
             
        </script>

