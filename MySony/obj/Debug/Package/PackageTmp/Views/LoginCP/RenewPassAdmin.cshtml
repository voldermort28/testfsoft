@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Tạo mật khẩu mới</title>
    <meta name="description" content="app, web app, responsive, admin dashboard, admin, flat, flat ui, ui kit, off screen nav" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="icon" href="/static/images/favicon.ico">
    <link rel="stylesheet" href="/static/css/app.v1.css" type="text/css" />
    <link rel="stylesheet" href="/static/css/sony.style.css" type="text/css" />
    <link rel="stylesheet" href="/static/css/screen.css" type="text/css" />
</head>
    <body>
        <div id="ajax_loader" style="background-color: rgba(0, 0, 0, 0.5); z-index: 9999; position: fixed; left: 0px; top: 0px; width: 100%; height: 100%; display: none;" class="">
            <img src="/static/images/loading.gif" style="position: fixed; left: 50%; top: 50%;" class="">
        </div>
        <section class="vbox site-wrapper page-user dark-green">
            <section>
                <section class="hbox stretch">
                    <section id="content">
                        <header class="header header-md navbar bg site-header-top">
                            <div class="navbar-header aside-md dk site-logo">
                                <a class="btn btn-link visible-xs site-m-menu-toggle" data-toggle="class:nav-off-screen" data-target="#nav"> <i class="fa fa-bars"></i> </a>
                                <a href="/LoginCP/Index/" class="navbar-brand"> <img src="/static/images/logo.png" class="m-r-sm" alt="scale" height="17" width="100" /> </a>
                            </div>
                            <div class="page-header-logo">
                                <div class="customer-logo">
                                    <img src="/static/images/figures/cus-logo.png" alt="...">
                                </div>
                                <div class="navbar-header site-logan">
                                    Chúng tôi trồng cây Dịch vụ
                                    <span>bạn hái quả Chăm sóc</span>
                                </div>
                            </div>
                        </header>
                        <section class="vbox page-user-content-box">
                            <div class="page-header padder page-contrains">
                                <ul>
                                    <li>
                                        <span class="thumb-u-avatar pull-left">
                                            <img src="/static/images/figures/avatar_profile.png" alt="...">
                                        </span>
                                        <a href="#" class="active">Tạo mới mật khẩu <i class="fa fa-caret-up"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <section class="scrollable">
                                <div class="page page-main-content">
                                    <div class="page-content padder page-contrains">
                                        <div class="page-form-wrapper">
                                            @{
                                                <label>@ViewBag.msg</label>
                                                if (ViewBag.result == "OK")
                                                {
                                                    <form id="frmRenewPass" role="form" class="form form-persional-infos" data-parsley-validate onsubmit="return false;" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" id="longtime" name="longtime" value="@ViewBag.longtime" />
                                                        <input type="hidden" id="email" name="email" value="@ViewBag.email" />
                                                        <div class="form-markup form-title">
                                                            Khởi tạo mật khẩu
                                                        </div>
                                                        <section class="row">
                                                            <div class="col-xs-12 col-sm-6 col-md-6 r-l">
                                                                <div class="form-group form-group-email">
                                                                    <label>Mật khẩu mới<span class="form-require">*</span></label>
                                                                    <input id="password"  name="password" type="password" class="form-control" placeholder="VD: mAtKhaU!123" data-parsley-minlength="8" data-parsley-notblank="true" data-parsley-required="true" data-parsley-pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)" required />
                                                                </div>
                                                            </div>
                                                            <div class="col-xs-12 col-sm-6 col-md-6 r-r">
                                                                <div class="form-group form-group-phone">
                                                                    <label>Xác nhận mật khẩu <span class="form-require">*</span></label>
                                                                    <input type="password" class="form-control" placeholder="VD: mAtKhaU!123" data-equalto="#password" data-parsley-minlength="8" data-parsley-notblank="true" data-parsley-required="true" required />
                                                                </div>
                                                            </div>
                                                        </section>
                                                        <div class="form-actions text-right">
                                                            <input type="submit" class="btn btn-s-md btn-dark" value="Tiếp tục" />
                                                        </div>
                                                    </form>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="page-footer padder">
                                        <div class="row m-t">
                                            <div class="col-md-6">
                                                <div class="block block-landing-footer-menu">
                                                    <div class="block-content">
                                                        <ul class="menu">
                                                            <li><a href="#">Điều khoản sử dụng</a></li>
                                                            <li><a href="#">Quyền riêng tư</a></li>
                                                            <li><a href="#">Liên hệ</a></li>
                                                            <li><a href="#">Global Home</a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                f
                                                <div class="block block-landing-footer-copyright">
                                                    <div class="block-content">
                                                        @DateTime.Now.Year © Bản quyền thuộc sở hữu Công ty Sony Electronics Vietnam
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--End content-->
                            </section>
                        </section>
                        <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen" data-target="#nav"></a>
                    </section>
                </section>
            </section>
        </section>
        <!-- Bootstrap -->
        <!-- my modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog login">
                <div class="modal-content clearfix">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true" class="font-thin h1">&times;</span><span class="sr-only font-thin">Close</span></button>
                        <h4 class="modal-title" id="myModalLabel">Thông báo</h4>
                    </div>
                    <div class="modal-body">
                        <div style="line-height:20px" id="msg">msg</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- App -->
        <script>window.jQuery || document.write('<script src="/static/js/vendor/jquery-1.10.2.min.js"><\/script>')</script>
        <script src="/Scripts/jquery-ui-1.10.4.min.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
        <!-- Validator-->
        <script>
            window.ParsleyConfig = {
                errorsWrapper: '<div></div>',
                errorTemplate: '<span style="color:red"></span>'
            };
        </script>
        <script src="/static/js/validator/parsley.vi.js"></script>
        <script src="/static/js/validator/parsley.min.js"></script>
        <script src="/static/js/validator/parsley.extend.js"></script>
        <script type="text/javascript">
            window.ParsleyValidator.setLocale('vi');
            function ShowPopup(a, callback) {
                callback = callback || function () { };
                $('#ajax_loader').hide();
                $('.modal').modal('hide');
                $('#myModal').find('#msg').html(a);
                $('#myModal').modal('show');
                $('#myModal').on('hide.bs.modal', function (e) {
                    callback();
                });
            }
            $('#frmRenewPass').parsley().subscribe('parsley:form:validate', function (formInstance) {
                if (formInstance.isValid()) {
                    $.post('/LoginCP/RenewPassAdmin', {
                        email: $('#email').val(),
                        password: $('#password').val(),
                        longtime: $('#longtime').val()
                    }, function (res) {
                        if (res.result == "OK") {
                            ShowPopup(res.msg, function () { location.href = '/LoginCP/Index/'; });
                        } else {
                            $('input[type="submit"]').removeAttr('disabled');
                            ShowPopup(res.msg);
                        }                    
                    });
                }
            });
        </script>
        <script src="/static/js/app.v1.js"></script>
        <script src="/static/js/app.plugin.js"></script>
        <script src="/static/js/jquery.uniform.js"></script>
        <script src="/static/js/application.js"></script>
        <script src="/static/js/common.js"></script>
    </body>
</html>